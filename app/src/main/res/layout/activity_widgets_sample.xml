<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/queryWidgets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Query Widgets"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup" />

    <Button
        android:id="@+id/queryScreenTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Query Screen Title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/queryWidgets" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/radioDiscovery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Discovery" />

        <RadioButton
            android:id="@+id/radioShop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Shop" />

        <RadioButton
            android:id="@+id/radioEvents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Events" />

        <RadioButton
            android:id="@+id/radioWallet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wallet" />

        <RadioButton
            android:id="@+id/radioBooking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Booking" />

        <RadioButton
            android:id="@+id/radioLineup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LineUp" />

        <RadioButton
            android:id="@+id/radioGeneric"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Generic" />

    </RadioGroup>


</androidx.constraintlayout.widget.ConstraintLayout>
